<% provide(:title, @user.name) %>
<% if logged_in? %>
  <% provide(:heading, current_user[:name]) %>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <%= gravatar_for @user %>
        <strong>Name:</strong>
        <%= @user.name %>
      </div>

      <div>
        <strong>Email:</strong>
        <%= @user.email %>
      </div>

      <div>
        <strong>Phone:</strong>
        <%= @user.phone %>
      </div>

    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.reviews.any? %>
      <h3>reviews (<%= @user.reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
     <%= will_paginate @reviews %>
    <% end %>
    <%= render 'reviews/form', review: Review.new %>
  </div>
</div>
